{% extends 'base.html.twig' %}

{% block title %}Hello ConsultationHaieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block content %}
<div class="example-wrapper">
    <h1> Consultation </h1>
    <table>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Prix</th>
        </tr>
        {% for haie in lesHaies %}
        <tr>
            <td>{{ haie.code }}</td>
            <td>{{ haie.nom }}</td>
            <td>{{ haie.prix }}</td>
            <td><a href="{{ path('app_modifier_haie', {'code': haie.code}) }}">Modifier</a></td>
        </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_accueil') }}">Retour</a>

</div>
{% endblock %}
{% endblock %}
