{% extends 'base.html.twig' %}
{% block content %}
{% block title %}Hello HaieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    <select id="type-haie" name="haie" required>
        <option value="" disabled selected>--Choisir votre type de haie--</option>
    {% for item in mesHaies %}
        <option value="{{ item.code }}">{{ item.nom }}</option>
    {% endfor %}
    </select>

  
</div>
{% endblock %}
{% endblock %}